{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "references": [
    {
      "path": "./chrome-extension"
    }
  ],
  "include": ["shared/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}